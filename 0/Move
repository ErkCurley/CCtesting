local modem = peripheral.wrap("left")

function forward(num)
  if not turtle.detectUp() then
    shell.run("Fuel")
  end  
      
  for i=1,num do 
    turtle.forward()
  end
end

function back(num)
  turtle.turnLeft()
  turtle.turnLeft()
  for i=1,num do 
    forward(1)
  end
end

function right(num)
  turtle.turnRight()
  for i=1,num do 
    forward(1)
  end
end
function left(num)
  turtle.turnLeft()
  for i=1,num do 
    forward(1)
  end
end
function round()
  turtle.turnLeft()
  turtle.turnLeft()
end
function turn(face,want)
  if face == want then

  else
    while face ~= want do 
      turtle.turnRight()
      face = face + 1
      if face == 5 then
        face = face - 4
      end
    end
  end
end

function move(a,b,c)
  face = face()
  local startX, startY, startZ = gps.locate()
  if(a>startX)then
   
  end
  if(b>startY)then
   
  end
  if(c>startZ)then
   
  end
  print("Face = "..face)
end

function face()
  local x,y,z = gps.locate()
  forward(1)
  local X,Y,Z = gps.locate()
  round()
  forward(1)
  round()
  if(X>x)then
    print("Facing East")
    return 2 --"East"
  end
  if(X<x)then
    print("Facing West")
    return 4 --"West"
  end
  if(Z>z)then
    print("Facing South")
    return 3 --"South"
  end
  if(Z<z)then
    print("Facing North")
    return 1 --"North"
  end
  return "None"
end
turn(face(),1)
